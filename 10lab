<h2>Слова</h2>
<h4>По горизонтали</h4>
<span id="0">1)[а-в]в{1}(иано|авиа)се(?=ц).</span><br>
<span id="2">3)(Ато|Лез|Рек).[м-о]+д</span><br> 
<span id="6">7)(д.|ае)л.+</span><br>
<span id="9">10)Ко(н|с|к)[откуд]+</span><br> 
<h4>По вертикали</h4>
<span id="1">2)[СЯЙ]\Sа</span><br>
<span id="3">4)д?(о|и|б)цент</span><br>
<span id="4">5)[гсл]ра.[^днр]</span><br> 
<span id="5">6)г(рам|ром|меш)[о-т]\Dа</span><br>
<span id="7">8)(Мо|Ре|От)н.{3}</span><br>
<span id="8">9)Тв{1}.р{1}.г{1}</span><br>
Ответы:<br>
1)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Авианосец</span><br>
2)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">США</span><br>
3)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Атомоход</span><br>
4)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Доцент</span><br>
5)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Гранд</span><br>
6)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Грамота</span><br>
7)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Дуэль</span><br>
8)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Монстр</span><br>
9)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Творог</span><br>
10)<span style="background-color: black;" onmouseout="this.style.backgroundColor='black'" onmouseover="this.style.backgroundColor=''">Кондуктор</span><br>


<script>
	function FocusQuestion(QuestionNum){
		document.getElementById(QuestionNum).style.backgroundColor = 'red' ;
	}
	function UnFocusQuestion(QuestionNum){
		document.getElementById(QuestionNum).style.backgroundColor = '' ;
	}
	let TrueAnswers = ["Авианосец", "сша", "Атомоход", "Доцент", "Гранд", "Грамота", "Дуэль", "Монстр", "Творог", "Кондуктор" ];
	let RegExp = [
	    /[а-в]в{1}(иано|авиа)се(?=ц)./i,
        /(Ато|Лез|Рек).[м-о]+д/i,
        /(д.|ае)л.+/i,
        /Ко(н|с|к)[откуд]+/i,
        /[СЯЙ]\Sа/i,
        /д?(о|и|б)цент/i,
        /[гсл]ра.[^днр]/i,
        /г(рам|ром|меш)[о-т]\Dа/i,
        /(Мо|Ре|От)н.{3}/i,
        /Тв{1}.р{1}.г{1}/i,
		
	]
	function CheckAnswer(QuestionNumber){
		let Answer="";
		let Questions = document.getElementsByClassName("Question"+[QuestionNumber]);
    	for (i=0; i<Questions.length; i++) {
    	    Answer += Questions[i].value;
		}

		if (Answer.length == Questions.length){
			if(RegExp[QuestionNumber].test(Answer)){
				for (i=0; i<Questions.length; i++) {
    		    	Questions[i].style.backgroundColor = '#c4ffc0' ;
				}
    		} else {
				for (i=0; i<Questions.length; i++) {
    		    	Questions[i].style.backgroundColor = '#ffc0c0' ;
				}
			}
		}
	}
</script>
